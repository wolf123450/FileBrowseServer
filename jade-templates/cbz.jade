doctype html
html(lang="en")
  head
    title= pageTitle
    link(rel="stylesheet" href="/styles/cbz.css")
  body
    div.content
      div.link-container
        ul#links
          if prev
            a(href=prev)
              li#prev
                |Prev
          if next
            a(href=next)
              li#next
                |Next
      div.image-container
        img(src= imageSource).mainImage
